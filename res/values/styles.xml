<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Our Font Specific Styles for the Demo -->
    <style name="italic_for_demo">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="font_fff_tusj">
        <item name="font">fonts/FFF_Tusj.ttf</item>
    </style>

    <style name="font_fff_tusj_bold" parent="font_fff_tusj">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="font_neo_retro_draw">
        <item name="font">fonts/BPdots.otf</item>
    </style>

    <style name="font_neo_retro_draw_strong">
        <item name="font">fonts/BPdotsBold.otf</item>
    </style>

    <style name="font_neo_retro_draw_sans">
        <item name="font">fonts/BPdotsLight.otf</item>
    </style>

    <style name="neo_retro_draw_h1" parent="font_neo_retro_draw">
        <item name="android:textSize">72sp</item>
    </style>

</resources>